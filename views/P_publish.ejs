/////////for addding tags//////////////
  function function1(){

      $( "select option:selected" ).each(function() {
          var str=$("#in7").val();
          var val=$( this ).text();
          var no=str.split('#').length

         if(str.search(val)!=-1){
           $("#set6").text(" Already in Taglist ");
           $("#set6").css({ 'color': 'red'});
         }
         else if(no<=4){
           $("#in7").text(str+"# "+val+"\n");
           $("#set6").text(no+" Tag Selected ");
           $("#set6").css({ 'color': 'green'});
         }
         else {
           $("#in7").text(str+"# "+val+"\n");
           $("#set6").text(no+" Tag Selected (Max:4) ");
           $("#set6").css({ 'color': 'red'});
         }

      });
  }

////////for removing tags/////////////////////////
  function function2(){

      $( "select option:selected" ).each(function() {

        var str=$("#in7").val();
        var val=$( this ).text();
        var no=str.split('#').length-2;

        if(str.search(val)==-1){
          $("#set6").text(" Not present in Taglist ");
          $("#set6").css({ 'color': 'red'});
        }
        else {
          str=str.replace("# "+val+"\n",'');
          $("#in7").text(str);
          $("#set6").text(no+" Tag Selected ");
          if(no <= 4) $("#set6").css({ 'color': 'green'});
          else $("#set6").css({ 'color': 'red'});

        }

      });
  }


//final checking details and invokeing submit//////////////////////
  function myFunction() {

        var article=$("#in1").val();
        var subArticle=$("#in2").val();
        var para1=$("#in3").val();
        var para2=$("#in4").val();
        var para3=$("#in5").val();
        var tags=$("#in7").val().split('#').length-1;

        if( article.length == 0){alert("Main Title Can't be Empty !");return false}
        else if( article.length < 10){alert("Main Title is Too Short !");return false}
        else if(article.length > 50){alert("Main Title is Too Long");return false}
        else if( subArticle.length == 0){alert("Sub Title Can't be Empty !");return false}
        else if(subArticle.length > 50){alert("Sub Title  is Too Long");return false}
        else if( subArticle.length < 10){alert("Sub Title is Too Short !");return false;}
        else if( para1.length < 300){alert("Paragraph-I is Too Short ! \nJust think about some more stuff..");return false;}
        else if( para1.length < 300){alert("Paragraph-I Word Limit Exceeded !");return false;}
        else if(tags == 0){alert(" Bro!...Select atleast ONE tag !");return false;}
        else if(tags > 4){alert("Maximum of 4 tags are Allowed !");return false;}

////////////if everything all ryt//////////////////

        var hours=new Date().getHours();
        var minutes=new Date().getMinutes();
        var ampm = hours >= 12 ? 'pm' : 'am';
        hours = hours % 12;
        hours = hours ? hours : 12;
        minutes = minutes < 10 ? '0'+minutes : minutes;
        var strTime = hours + ':' + minutes + ' ' + ampm;

        $("#hiddenTime").val(strTime);
        $("#mybtn").click();
        return true;

    }

</script>

