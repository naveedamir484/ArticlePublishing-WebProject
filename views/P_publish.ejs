      }
      else if(n<0){
          $("#set2").text(" Character limit Exceed ( X )");
          $("#set2").css({ 'color': 'red'});
      }
      else if(50-n<10){
        $("#set2").text(n+ " Characters are left   ");
        $("#set2").css({ 'color': 'red'});
      }
      else{
        $("#set2").text(n+ " Characters are left   ");
        $("#set2").css({ 'color': 'green'});
      }
    });

// intput three para one
